doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Road2eSports
        link(rel="stylesheet" href="/style/main.css")
        link(rel="shortcut icon" type="image/png" href="/img/icon_32.png" sizes="32x32")
        link(rel="shortcut icon" type="image/png" href="/img/icon_16.png" sizes="16x16")
    body
        include ./header.pug
        .container
            .row
                include ./input.pug
            .row
                .block
                    .block-header
                        .block-body.block-row--center
                            a(href="https://github.com/unscript/rt-date-calculation") <img alt="github" style="margin-top: -4px;" height="16px" src="/img/github.png"> unscript
            include ./dpicker.pug
            include ./result.pug
        block scripts
            script(src="/js/app.js")